root = true
# All files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
# html/scss/css files
[*.{html,scss,css,json,xml,csproj,yml}]
indent_size = 2
# markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
